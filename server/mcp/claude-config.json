{
  "name": "Adspirer",
  "description": "Connect to your Amazon Ads data and analytics",
  "version": "1.0.0",
  "connection": {
    "type": "stdio",
    "command": "adspirer-mcp"
  },
  "authentication": {
    "type": "apiKey",
    "headerName": "x-api-key",
    "description": "Enter your API key from the Adspirer dashboard"
  },
  "capabilities": {
    "resources": {
      "schemes": ["campaigns"]
    },
    "tools": {
      "analyze-performance": {
        "description": "Analyze campaign performance metrics"
      }
    }
  }
}
