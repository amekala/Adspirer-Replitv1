# Session management
SESSION_SECRET=your_session_secret_here

# Amazon API credentials (for API integration)
AMAZON_CLIENT_SECRET=your_amazon_client_secret_here
VITE_AMAZON_CLIENT_ID=your_amazon_client_id_here
VITE_AMAZON_CLIENT_SECRET=your_amazon_client_secret_here

# Database connection (hosted Neon PostgreSQL)
DATABASE_URL=postgresql://username:password@host:port/dbname?sslmode=require
# Individual connection parameters (derived from the URL above)
PGDATABASE=your_db_name
PGHOST=your_db_host
PGPORT=5432
PGUSER=your_db_user
PGPASSWORD=your_db_password

# OpenAI API for chat functionality
OPENAI_MODEL=gpt-4o
OPENAI_API_KEY=your_openai_api_key_here

# Server settings
PORT=5000
NODE_ENV=development